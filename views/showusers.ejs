<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show users</title>
    <style>
        table,
        th,
        td {
            border: solid 1px rgb(1, 63, 84);
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>

        <% for(let user of users) { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td>
                    <form method="GET" action="/user/<%= user.id %>/edit">
                        <button>Edit username</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>
